//check whether a number is aemstrong or not then convert it in to hexa decimal number
#include <bits/stdc++.h>
using namespace std;
void decToHex(int decNum)
{

    char hexaDeciNum[50];
    // counter for hexadecimal number array
    int i = 0;
    while (decNum != 0)
    {
        int temp = 0;
        temp = decNum % 16;
        if (temp < 10)
        {
            hexaDeciNum[i] = temp + 48;
            i++;
        }
        else
        {
            hexaDeciNum[i] = temp + 55;
            i++;
        }
        decNum = decNum / 16;
    }
    printf("0x"); 
    for (int j = i - 1; j >= 0; j--)
    {
        printf("%c", hexaDeciNum[j]);
    }
}
int main()
{
    int n,r,sum=0;
    cin>>n;
    int t=n;
    while(n!=0)
    {
        r=n%10;
        sum=sum+(r*r*r);
        n=n/10;

    }
    if(sum==t){
        cout<<t<<" is an armstrong number"<<endl;}
    else    cout<<t<<" is not an armstrong number"<<endl;
    if(sum==t)
    {
    cout<<"The hexadecimal form of "<<t<<" is ";
    decToHex(t);
    return 0;

    }
}
